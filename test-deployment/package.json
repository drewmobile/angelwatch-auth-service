{
    "name": "angelwatch-auth-service",
    "version": "1.0.0",
    "description": "Authentication service for Angel Watch platform",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "test": "jest",
        "test:unit": "jest --testPathPattern=unit",
        "test:integration": "jest --testPathPattern=integration",
        "test:load": "artillery run tests/load/auth-load-test.yml",
        "deploy": "cdk deploy",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "format": "prettier --write src/**/*.ts"
    },
    "keywords": [
        "aws",
        "lambda",
        "authentication",
        "cognito",
        "oauth",
        "microservice"
    ],
    "author": "AngelWatch Team",
    "license": "MIT",
    "dependencies": {
        "@aws-sdk/client-cognito-identity-provider": "^3.450.0",
        "@aws-sdk/client-dynamodb": "^3.450.0",
        "@aws-sdk/lib-dynamodb": "^3.450.0",
        "aws-lambda": "^1.0.7",
        "bcryptjs": "^2.4.3",
        "jsonwebtoken": "^9.0.2",
        "joi": "^17.11.0",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.130",
        "@types/bcryptjs": "^2.4.6",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/jest": "^29.5.8",
        "@types/node": "^20.9.0",
        "@types/uuid": "^9.0.7",
        "@typescript-eslint/eslint-plugin": "^6.12.0",
        "@typescript-eslint/parser": "^6.12.0",
        "artillery": "^2.0.0",
        "aws-cdk": "^2.100.0",
        "aws-cdk-lib": "^2.100.0",
        "eslint": "^8.54.0",
        "jest": "^29.7.0",
        "prettier": "^3.1.0",
        "ts-jest": "^29.1.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.2.2"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}